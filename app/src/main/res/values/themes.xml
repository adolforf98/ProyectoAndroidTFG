<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GreenEat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/verdeoscuro</item>
        <item name="colorPrimaryVariant">@color/naranjabarra</item>
        <item name="colorOnPrimary">@color/verdemedio</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/naranja</item>
        <item name="colorSecondaryVariant">@color/naranja</item>
        <item name="colorOnSecondary">@color/naranja</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="1">?attr/colorPrimaryVariant</item>
        <!-- Customize your light theme here. -->
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/verdeoscuro</item>
        <item name="itemIconTint">@drawable/bottom_nav_color</item>
        <item name="itemTextColor">@drawable/bottom_nav_color</item>
        <item name="textAppearanceTitleLarge">@drawable/bottom_nav_color</item>
        <item name="android:textSize">28dp</item>
    </style>
    <style name="searchtheme">
        <item name="android:textColor">@color/naranja</item>
        <item name="android:textColorHint">@color/naranja</item>
    </style>



</resources>